@page
@using Microsoft.AspNetCore.Mvc.Localization
@using QLHS.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model QLHS.Web.Pages.Students.ViewModal
@inject IHtmlLocalizer<QLHSResource> L

@{
    Layout = null;
}
<form method="post" asp-page="/Students/ViewModal">
    <abp-modal>
        @*<abp-modal-header  title="Student Information"></abp-modal-header>*@
        <abp-modal-body>
            <abp-tabs name="view-student-modal-tabs">
                <abp-tab title=@L["View Student"].Value class="mt-3">


                    <div class="card-body pt-0">
                        <table class="table table-bordered">
                            <tr>
                                <th width="30%">@L["Student Name"].Value</th>
                                <td>@Model.StudentViewModel.Name</td>
                            </tr>
                            <tr>
                                <th width="30%">@L["Student Address"].Value</th>
                                <td>@Model.StudentViewModel.Address</td>
                            </tr>
                            <tr>
                                <th width="30%">@L["Student DOB"].Value</th>
                                <td>@Model.StudentViewModel.Dob</td>
                            </tr>
                        </table>
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
    </abp-modal>
</form>