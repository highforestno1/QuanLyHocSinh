@page
@model QLHS.Web.Pages.Students.Index
@section scripts
{
    <abp-script src="/Pages/Students/Index.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>Students</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewStudentButton"
                            text="New Student"
                            icon="plus"
                            button-type="Primary"/>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="StudentsTable"></abp-table>
    </abp-card-body>
</abp-card>