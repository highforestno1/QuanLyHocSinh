@page
@using Microsoft.AspNetCore.Mvc.Localization
@using QLHS.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model QLHS.Web.Pages.Teachers.EditModal
@inject IHtmlLocalizer<QLHSResource> L
@{
    Layout = null;
}

<form method="post" id="EditTeacherModal" asp-page="/Teachers/EditModal">
    <abp-modal>
        <abp-modal-header title=@L["Update Teacher"].Value></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="edit-Teacher-modal-tabs">
                <abp-tab title=@L["Teacher Information"].Value class="mt-3">
                    <div id="Teacher-information-wrapper" class="mt-3">
                        <abp-input asp-for="Id" />
                        <abp-input asp-for="EditingTeacher.Name" label=@L["Teacher Name"].Value/>
                        <abp-input asp-for="EditingTeacher.BirthDate" type="date" label=@L["Teacher DOB"].Value/>
                        <abp-input asp-for="EditingTeacher.Address" label=@L["Teacher Address"].Value type="string"/>
                        <abp-input asp-for="EditingTeacher.ShortBio" label=@L["Teacher ShortBio"].Value type="string"/>
                        <abp-input asp-for="EditingTeacher.PhoneNumber" label=@L["Teacher PhoneNumber"].Value type="string"/>
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>